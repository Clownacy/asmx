***	DELETE - DELETE FILES.
*
*	DEL[ETE] FNAME [,FNAME,...,FNAME]
*	ERA[SE] FNAME [,FNAME,...,FNAME]

DELETE	POP	H
	CALL	$SOB
	ANA	A
	JZ	ILLSYN

	MOV	B,H
	MOV	C,L
	PUSH	B			; SAVE COMMAND ADDRESS
	CALL	FEC			; FIND END OF COMMAND LINE
	LXI	B,DELAL
	LXI	D,DELA
	CALL	$MOVE			; ADD '/DELETE' COMMAND
	POP	B
	JMP	PIP

DELA	DB	'/DEL',0
DELAL	EQU	*-DELA
